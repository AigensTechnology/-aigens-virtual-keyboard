{  
    "compilerOptions": {  
        "target": "ES6",  
        "module": "CommonJS",  // CommonJS 模块  
        "outDir": "./dist/cjs",  
        "declaration": true,  
        "moduleResolution": "node",  
        "esModuleInterop": true,  
        "skipLibCheck": true,  
        "forceConsistentCasingInFileNames": true  
    },  
    "include": ["src/**/*.ts", "@types/**/*.d.ts"],  
    "exclude": ["node_modules", "**/*.spec.ts"]  
}