{  
    "compilerOptions": {  
        "target": "ES6",  
        "module": "ESNext",  // ES Module  
        "outDir": "./dist/esm",  
        "declaration": true,  
        "moduleResolution": "node",  
        "esModuleInterop": true,  
        "skipLibCheck": true,  
        "forceConsistentCasingInFileNames": true  
    },  
    "include": ["src/**/*.ts", "@types/**/*.d.ts"],  
    "exclude": ["node_modules", "**/*.spec.ts"]  
}